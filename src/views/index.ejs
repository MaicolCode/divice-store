    </main>
    <script>
        let indexSlides = 0
        activeSlide()

        function activeSlide() {
            const $slides = document.querySelectorAll('.images-section img')

            for (let i = 0; i < $slides.length; i++) {
                $slides[i].style.display = 'none'
            }

            indexSlides++

            if (indexSlides > $slides.length) { indexSlides = 1 }
            $slides[indexSlides - 1].style.display = 'block'

            setTimeout(activeSlide, 5000)
        }

    </script>
